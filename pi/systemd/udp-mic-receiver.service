[Unit]
Description=UDP Mic Receiver for Android Auto
After=pulseaudio.service openauto.service
StartLimitIntervalSec=60
StartLimitBurst=5

[Service]
Type=simple
User=pi
Environment=PULSE_SERVER=/run/pulse/native
ExecStartPre=/bin/sleep 3
ExecStart=/usr/bin/python3 /home/pi/udp_mic_receiver.py 8000
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
